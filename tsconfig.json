{
  "compilerOptions": {
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "es2015",
      "es2017",
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    }
  }
}
